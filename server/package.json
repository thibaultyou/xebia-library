{
  "name": "server",
  "version": "1.0.0",
  "description": "Xebia library GraphQL API server",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "prettier": "prettier --write *.{js,jsx,html,md,mdx,yaml,json,css,scss,less}",
    "lint": "eslint . --cache; exit 0",
    "test": "mocha",
    "server:dev": "NODE_ENV=development nodemon server.js --exec 'npm run prettier && npm run lint && npm run test && node'",
    "server": "NODE_ENV=production nodemon server.js"
  },
  "author": "Thibault YOU",
  "license": "GLWTPL",
  "dependencies": {
    "axios": "0.18.0",
    "express": "4.16.4",
    "express-graphql": "0.8.0",
    "graphql": "14.2.1",
    "mocha": "6.1.4"
  },
  "devDependencies": {
    "easygraphql-tester": "5.1.3",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.2.0",
    "eslint-plugin-prettier": "3.0.1",
    "nodemon": "1.19.0",
    "prettier": "1.17.0"
  }
}
